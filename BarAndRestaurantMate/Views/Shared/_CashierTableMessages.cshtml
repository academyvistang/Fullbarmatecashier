@model BarAndRestaurantMate.Models.ReportViewModel

@*<link href="~/css/CoolTable.css" rel="stylesheet" />*@

@if(Model.AllCashierMessages.Any())
{
<div class="twelve columns">

    <div>
        <table class="striped fixedlayout">
            <thead>
                <tr>
                    <th width="15%">Table</th>
                    <th width="75%">Message</th>
                    <th width="10%">Time</th>
                </tr>
            </thead>
            <tbody id="CasesTableBody1">
                @foreach (var rm in Model.AllCashierMessages.OrderByDescending(x => x.MessageDate))
                {
                    var strCol = ""; 

                    <tr border="1" bgcolor="@strCol">
                        <td class="tth2" align="center">@rm.TableName</td>
                        <td class="tth2" align="center">@rm.Message</td>
                        <td class="tth2" align="center">@rm.MessageDate.ToShortTimeString()</td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
}
else
{
    <p>No Messages</p>
}
    
