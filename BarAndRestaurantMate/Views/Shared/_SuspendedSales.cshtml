<script type="text/javascript">
    $(function () {

        $.ajax({
            url: '/Pos/GetCashierSuspendedSales',
            data: { searchText: '' },
            type: 'GET',
            dataType: 'html',
            success: function (data)
            {
                $('#SuspendedSalestableItems').html(data);
            },
            error: function (jqxhr, textStatus, errorThrown) {
                $(window).hideWaitScreen();
                if (confirm(errorThrown)) { window.location.reload(); }
            }
        });

    });

</script>



<div id="suspendSalesModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="suspendSalesModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="suspendSalesModalLabel">Suspended Sales</h3>
    </div>
    <div class="modal-body">
        <div id="openTilldiv"></div>
        <div class="well form-horizontal" style="margin-bottom:0;">

            <div id="SuspendedSalestableItems">
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-danger" href="@Url.Action("ClearSuspend", "Pos")">Clear</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>


