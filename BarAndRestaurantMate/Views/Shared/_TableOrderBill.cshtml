@model BarAndRestaurantMate.Models.HotelMenuModel
<link href="~/css/CoolTable.css" rel="stylesheet" />

<table id="CustomerItemsBillTable" class="striped fixedlayout">
    <thead>
        <tr>

            <th width="60%">Item</th>
            <th width="10%">Qty</th>
            <th width="30%">Price (NGN)</th>
        </tr>
    </thead>
    <tbody id="CasesTableBody1">


        @foreach (var tabItem in Model.TabOrderModelList)
        {
            foreach (var item in tabItem.Items)
            {
                <tr id="@item.Id">
                    <td>@item.StockItem.StockItemName</td>
                    <td style="text-align:center;">@tabItem.Quantity</td>
                    <td style="text-align:center;">@tabItem.FullPrice</td>
                </tr>

            }

        }

        <tr border="1" bgcolor="#ff4980">
            <td colspan="2">Total</td>
            <td style="text-align:center;">@Decimal.Round(Model.TabOrderModelList.Sum(x => x.FullPrice), 2)</td>
            <td></td>
        </tr>


    </tbody>
</table>









