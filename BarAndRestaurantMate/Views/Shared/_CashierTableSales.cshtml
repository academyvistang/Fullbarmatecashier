@model BarAndRestaurantMate.Models.ReportViewModel

@if (Model.AllSuspendedSales.Any())
{
    <div class="twelve columns">

        <div>
            <table class="striped fixedlayout">
                <thead>
                    <tr>
                        <th width="25%">Time</th>
                        <th width="75%">Items</th>
                        <th width="10%"></th>
                        <th width="10%"></th>

                    </tr>
                </thead>
                <tbody id="CasesTableBody1">
                    @foreach (var rm in Model.AllSuspendedSales.OrderByDescending(x => x.SuspentionTime))
                    {
                        var strCol = "";

                        <tr border="1" bgcolor="@strCol">
                            <td class="tth2" align="center">@rm.SuspentionTime.ToShortTimeString()</td>
                            <td class="tth2" align="center">@rm.itemsList</td>
                            <td class="tth2" align="center"><a class="btn btn-primary" href="@Url.Action("Index", "Pos", new { suspendId = rm.Id })">Retrieve</a></td>
                        </tr>
                    }
                  
              </tbody>
            </table>

        </div>

    </div>
}
else
{
    <p>No Supended Sales</p>
}


