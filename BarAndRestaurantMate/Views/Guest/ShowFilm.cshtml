@model BarAndRestaurantMate.Models.CinemaModel

@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_LayoutOfla.cshtml";
}



<link href="~/css/video/video-js.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>

<script>
    $(function () {
        $('#my-video').bind('contextmenu', function () { return false; });
    });
</script>



<section id="content" class="twelve columns" style="height:810px;">
    <h1 class="page-title ci-title">
        <span>@Model.MovieName</span> <span style="float:right; padding-left:5px;"><a class="btn btn-primary" style="color:red;" href="@Model.GoBackLink">Go Back</a></span>
    </h1>


    <div class="row">
        <div class="col-md-12">
            <video id="my-video" style="margin:0px;" class="video-js" controls preload="auto" autoplay width="100%" height="425"
                   poster="~/videos/Posters/@Model.PosterPath" data-setup="{}">
                <source src="@Model.FileName" type='video/mp4'>
                <source src="MY_VIDEO.webm" type='video/webm'>
                <p class="vjs-no-js">
                    To view this video please enable JavaScript, and consider upgrading to a web browser that
                    <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
                </p>
            </video>
        </div>
    </div>


</section>

