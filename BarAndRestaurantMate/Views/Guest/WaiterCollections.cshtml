@model BarAndRestaurantMate.Models.BaseViewModel

@{
    ViewBag.Title = "Home Page";
}

@section scripts
 {

    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    @*<script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>*@
    <!--Reference the autogenerated SignalR hub script. -->
    @*<script src="~/signalr/hubs"></script>*@
    <!--SignalR script to update the chat page and send messages.-->
    @*<script src="~/Scripts/automationconnection.js"></script>*@


}

<div class="twelve columns">

    @foreach (var tb in Model.Kitchenlist)
    {
        <div class="three columns">
            <p>@tb.BarTab.TableAlias - <span style="color:red;">@((tb.BarTab.Person.DistributionPoint != null) ? tb.BarTab.Person.DistributionPoint.Description : "UNKNOWN" )</span></p>
            <hr />
            @Html.Partial("_CollectionTable", tb)
            <form method="post" class="signin" action="@Url.Action("PlaceOrderDoneByCollection","Guest")">
                @Html.Hidden("ValueIds", tb.ValueIds)
                <input style="float:right;" class="submit button" name="@tb.BarTab.Id" type="submit" value="COLLECTED" />
            </form>
        </div>
    }

    @if(!Model.Kitchenlist.Any())
    {
        <p>There are no orders ready for collection</p>
    }

   

    @Html.Hidden("GROUP", "WAITRESS")
    @Html.Hidden("PERSONNAME", @User.Identity.Name)

</div>

@section PaginationBox
{
    @Html.Partial("_Pagination")
}




