@model BarAndRestaurantMate.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    function blinker() {
        $('.blink_me').fadeOut(500);
        $('.blink_me').fadeIn(500);
    }

    setInterval(blinker, 1000);
</script>

<div class="page-head">
    <h2>BarMate</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Home")" id="todaySale">Go Back</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Reports</a></li>
        <li class="active">Discounts Reports</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Discounts Reports</h3>
                    @Html.Partial("_DateSelector", "Discounts")
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:25%;"><strong>Date</strong></th>
                                    <th style="width:35%;"><strong>Receipt Number</strong></th>
                                    <th style="width:25%;"><strong>Amount (NGN)</strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.AllDiscounts)
                                {
                                    <tr>
                                        <td>@item.DiscountDate</td>
                                        <td>@item.ReceiptNumber</td>
                                        <td>@item.Amount</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="2">Total</td>
                                    <td>@Model.AllDiscounts.Sum(x => x.Amount)</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

