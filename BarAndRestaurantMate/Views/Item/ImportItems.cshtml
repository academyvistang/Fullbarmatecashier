@model BarAndRestaurantMate.Models.ItemModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-head">
    <h2>Items Import</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Item</a></li>
        <li class="active">Items Import</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <div class="block-flat">
                <div class="header">
                   
                </div>
                <div class="content">

                    @using (Html.BeginForm("ImportItems", "Item", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.Picture, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-7">
                                <input type="file" name="file" />
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary" name="strType" value="Create">Upload</button>
                            </div>
                        </div>
                  }


                </div>
            </div>
        </div>
    </div>

</div>



