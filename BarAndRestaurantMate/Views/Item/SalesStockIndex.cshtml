@model BarAndRestaurantMate.Models.ItemIndexModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-head">
    <h2>Items</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Sale Item</a></li>
        <li class="active">Sale Items List</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Sale Items</h3>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:15%;"><strong>Name</strong></th>
                                    <th style="width:10%;"><strong>Remaining</strong></th>
                                    <th style="width:10%;"><strong>Buying Price</strong></th>
                                    <th style="width:10%;"><strong>Selling Price</strong></th>
                                    <th style="width:20%;"><strong>Notification No.</strong></th>
                                    <th style="width:10%;"><strong>Cooked</strong></th>
                                    <th style="width:10%;"><strong>Kitchen</strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.PosItemList.Where(x => !x.StockItem.CookedFood).OrderBy(x => x.StockItem.StockItemName).ToList())
                                {
                                    <tr>
                                        <td>@item.StockItem.StockItemName</td>
                                        <td>@item.Remaining</td>
                                        <td>@item.StockItem.OrigPrice</td>
                                        <td>@item.StockItem.UnitPrice</td>
                                        <td>@item.StockItem.NotNumber</td>
                                        <td>@item.StockItem.CookedFood.ToString()</td>
                                        <td>@item.StockItem.KitchenOnly.ToString()</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

