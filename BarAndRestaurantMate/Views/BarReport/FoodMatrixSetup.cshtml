@model BarAndRestaurantMate.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>




<div class="page-head">
    <h2>BarMate</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Home")" id="todaySale">Go Back</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Reports</a></li>
        <li class="active">Cooked Food Matrix</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Cooked Food Matrix</h3>
                </div>
                <div class="content">
                @if (Model.CookedFoodItems.Any())
                {
            <table id="FoodItemsTableOrder" class="striped fixedlayout">
            <thead>
                <tr>
                    <th width="5%"></th>
                    <th width="40%">Item</th>
                    <th width="55%">Description</th>
                </tr>
            </thead>
            <tbody id="CasesTableBody1">

                @foreach (var item in Model.CookedFoodItems)
                {
                      <tr id="@item.Id">
                        <td><a href="@Url.Action("SetUpMatrix", "BarReport", new {id = item.Id })">SetUp</a></td>
                        <td>@item.StockItemName</td>
                        <td>@item.RawMatrix.ToDelimitedString(", ")</td>
                    </tr>
                }
            </tbody>
        </table>
                   
                }
               
                </div>
            </div>
        </div>
    </div>
</div>

