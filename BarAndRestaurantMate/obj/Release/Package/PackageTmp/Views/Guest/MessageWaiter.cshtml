@model BarAndRestaurantMate.Models.HotelMenuModel


@section scripts
{

    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    @*<script src="~/Scripts/jquery.signalR-2.0.3.min.js"></script>*@
    <!--Reference the autogenerated SignalR hub script. -->
    @*<script src="~/signalr/hubs"></script>*@
    <!--SignalR script to update the chat page and send messages.-->
    @*<script src="~/Scripts/automationconnection.js"></script>*@

    <script>
        $(function ()
        {
            $(".AddNewGuestMesage").click(function (e)
            {
                var iamAWaitress = $("#IamAWaitress").val();

                if (iamAWaitress == 0)
                {
                    e.preventDefault();
                    return false;
                }
                else
                {
                    var href = $(this).attr("href");

                    var url = href;
                    $.get(url, function (data)
                    {
                        $('<div id="VIModalNew" class="modal fade" data-backdrop="false" aria-hidden="true" tabindex="-1">' + data + '</div>').modal();

                    }).success(function () {
                    });

                    e.preventDefault();
                }
            });

        });
    </script>


}

<div class="twelve columns">

    @if (Model.IamAWaitress == 1)
    {
        @Html.Partial("_ViewMessagesByWaitress")
        @Html.Hidden("GROUP", Model.GuestCredentials + "#CUSTOMER#")
        @Html.Hidden("Messaging", Model.Messaging)
        @Html.Hidden("RepliedACustomer", Model.RepliedACustomer)
        @Html.Hidden("GuestId", Model.GuestId) 
        @Html.Hidden("MessageId", Model.MessageId) 
        @Html.Hidden("IamAWaitress", Model.IamAWaitress) 
    }
    else
    {
        @Html.Partial("_ViewMessages")
        
    @Html.Hidden("GROUP", Model.GuestCredentials + "#CUSTOMER#")
    @Html.Hidden("Messaging", Model.Messaging)
    @Html.Hidden("RepliedACustomer", 0)
    @Html.Hidden("GuestId", Model.GuestId)
    @Html.Hidden("MessageId", Model.MessageId) 
    @Html.Hidden("IamAWaitress", Model.IamAWaitress) 
        
    }
   

</div>

@section PaginationBox
{
    @Html.Partial("_Pagination")
}






