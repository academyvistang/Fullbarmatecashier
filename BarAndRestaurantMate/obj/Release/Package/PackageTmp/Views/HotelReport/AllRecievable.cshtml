@model BarAndRestaurantMate.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdminHotel.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="page-head">
    <h2>BarMate</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Home")" id="todaySale">Go Back</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Reports</a></li>
        <li class="active">Room Income Statement Cash Reports</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Room Income Statement Cash Reports</h3>
                    @Html.Partial("_DateSelector", "AllRecievable")
                </div>

                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:35%;"><strong>Guest</strong></th>
                                    <th style="width:25%;"><strong>Room Number</strong></th>
                                    <th style="width:20%;"><strong>Date</strong></th>
                                    <th style="width:20%;"><strong>Amount</strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">

                                @foreach (var item in Model.AllCashPayments.ToList())
                                {
                                    <tr>
                                        <td>@item.GuestRoom.Guest.FullName</td>
                                        <td>@item.GuestRoom.Room.RoomNumber</td>
                                        <td>@item.TransactionDate</td>
                                        <td>@item.Amount</td>
                                    </tr>
                                }

                                <tr>
                                    <td colspan="3">Room Sales Total</td>
                                    <td>@Model.AllCashPayments.Sum(x => x.Amount)</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

