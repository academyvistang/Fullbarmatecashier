@model BarAndRestaurantMate.Models.BaseViewModel

@{
    ViewBag.Title = "Booking";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@section scripts
 {
    <script type='text/javascript' src='~/panel/scripts/jquery.flexslider-2.1-min.js'></script>
    <script type='text/javascript' src='~/js/jquery.prettyPhoto.js'></script>
    <script type='text/javascript'>
        /* <![CDATA[ */
        var ThemeOption = { "map_zoom_level": "6", "map_coords_lat": "33.59", "map_coords_long": "-80", "map_tooltip": "Pointblank Str. 14, 54321, California", "slider_autoslide": "1", "slider_effect": "fade", "slider_direction": "horizontal", "slider_duration": "600", "slider_speed": "3000" };
        /* ]]> */
    </script>

    <script type='text/javascript' src='~/js/scripts.js'></script>

}

<div class="twelve columns">
    @{string para = "Thank you and welcome to " + System.Configuration.ConfigurationManager.AppSettings["HotelName"].ToString() + "'s interactive page. Here you can view your bill and menu, watch your favourite music videos.";}
    <p style="Color:white;">@para</p>
    <p style="Color:white;">You can also watch movies with our innovative Joromi Cinemas. We sincerely do hope you enjoy your experience. Please do not hesitate to use our feedback form if you choose to leave a feedback</p>
</div>



<div class="twelve  columns">

    @if (!string.IsNullOrEmpty(Model.Errormsg))
    {
        <p style="color:red;">@Model.Errormsg</p>
    }

</div>





<div id="MemberLogin" class="twelve  columns">

    <form method="post" class="signin" action="@Url.Action("StaffLogOn", "Account")">
        @Html.Hidden("StaffMember","1")
        @Html.Hidden("UserName", "STAFF")

        <div class="row">
            <div class="three columns">
                <label class="username">
                    <span>Username or email</span>
                    <input id="UserName" name="UserName" value="" type="text" autocomplete="off" placeholder="Username">
                </label>

            </div>
            <div class="three columns">
                <label class="password">
                    <span>Password</span>
                    <input id="Password" name="Password" value="" type="password" autocomplete="off" placeholder="Password">
                </label>

            </div>

            <div class="three columns">
                <br />
                <input class="submit button" name="SignIn" id="SignIn" type="submit" value="Sign in" />

                <span style="float:right; padding-left:5px;"><a class="btn btn-primary" href="@Url.Action("Index","Home")">Go Back</a></span>
            </div>



         

        </div>


    </form>

</div>




@if (System.Configuration.ConfigurationManager.AppSettings["IsRestaurant"].ToString() == "1")
{
    @Html.Partial("_RestaurantView")
}
else if (System.Configuration.ConfigurationManager.AppSettings["UseHotelCustomers"].ToString() == "1")
{

    @Html.Partial("_HotelView")
}
else
{
    @Html.Partial("_HomeView")
}




@section PaginationBox
{
    @Html.Partial("_Pagination")
}




