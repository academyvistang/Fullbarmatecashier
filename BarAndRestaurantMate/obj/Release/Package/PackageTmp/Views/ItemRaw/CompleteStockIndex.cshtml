@model BarAndRestaurantMate.Models.ItemRawIndexModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-head">
    <h2>Items</h2>
    <ol class="breadcrumb">
            <li><a href="#">Complete Item</a></li>
        <li class="active">Complete Items List</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Raw Items</h3>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:15%;"><strong>Name</strong></th>
                                    <th style="width:10%;"><strong>Recieved</strong></th>
                                    <th style="width:20%;"><strong>Remaining</strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.POStockList.OrderBy(x => x.ItemName).ToList())
                                {
                                    <tr>
                                        <td>@item.ItemName</td>
                                        <td>@item.TotalRecieved</td>
                                        <td>@item.Remaining</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

