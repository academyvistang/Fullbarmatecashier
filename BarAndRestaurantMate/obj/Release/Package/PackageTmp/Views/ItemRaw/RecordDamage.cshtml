@model BarAndRestaurantMate.Models.DamagedItemViewModel
    

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="page-head">
    <h2>Damages</h2>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Damages</a></li>
        <li class="active">Create/Edit</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-sm-6 col-md-6">
            <div class="block-flat">
                <div class="header">
                    <h3>Damages Create</h3>
                    @if (Model.Saved.HasValue && Model.Saved.Value)
                    {
                        <div class="alert alert-success alert-white rounded">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <div class="icon"><i class="fa fa-check"></i></div>
                            <strong>Success!</strong> Changes has been saved successfully!
                        </div>
                        <span>@Html.ActionLink("Record Damage", "RecordDamage", "ItemRaw")</span>
                    }
                </div>
                <div class="content">

                    @using (Html.BeginForm("RecordDamage", "ItemRaw", FormMethod.Post, new { @class = "form-horizontal" }))
                    {

                        @Html.HiddenFor(model => model.Id)
                        @Html.ValidationSummary(true)



                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-7">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control"})
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NumberOfItems, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-7">
                                @Html.EditorFor(model => model.NumberOfItems, new { @class = "form-control", @id = "Amount", @placeholder = "Amount" })
                                @Html.ValidationMessageFor(model => model.NumberOfItems)
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.ItemId, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-7">
                                @Html.DropDownListFor(model => model.ItemId, Model.Items) 
                                @Html.ValidationMessageFor(model => model.ItemId)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.StorePointId, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-7">
                                @Html.DropDownListFor(model => model.StorePointId, Model.Stores)
                                @Html.ValidationMessageFor(model => model.StorePointId)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.DistributionPointId, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-7">
                                @Html.DropDownListFor(model => model.DistributionPointId, Model.Terminals)
                                @Html.ValidationMessageFor(model => model.DistributionPointId)
                            </div>
                        </div>



                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                @{string stringValue = (Model.Id == 0) ? "Create" : "Update";}
                                <button type="submit" class="btn btn-primary">@stringValue</button>
                            </div>
                        </div>





                  }


                </div>
            </div>
        </div>
    </div>

</div>



