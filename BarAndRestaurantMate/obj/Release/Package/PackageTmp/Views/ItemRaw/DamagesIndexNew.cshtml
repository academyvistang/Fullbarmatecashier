@model BarAndRestaurantMate.Models.ItemRawIndexModel


@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-head">
    <h2>Items</h2>
    <ol class="breadcrumb">
        <li><a href="#">Damages</a></li>
        <li class="active">Complete Damages List</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Damaged Items</h3><span>@Html.ActionLink("Record Damage", "RecordDamage", "ItemRaw")</span>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:15%;"><strong>Item</strong></th>
                                    <th style="width:10%;"><strong>Date Recorded</strong></th>
                                    <th style="width:20%;"><strong>No. Of Items</strong></th>
                                    <th style="width:20%;"><strong>Store</strong></th>
                                    <th style="width:20%;"><strong>Terminal</strong></th>
                                    <th style="width:20%;"><strong></strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.DamagesList.ToList())
                                {
                                    <tr>
                                        <td>@item.StockItem.StockItemName</td>
                                        <td>@item.DateReported.ToShortDateString()</td>
                                        <td>@item.NumberDamaged</td>
                                        <td>@(item.StorePoint != null ? item.StorePoint.Name : "N/A")</td>
                                        <td>@(item.DistributionPoint != null ? item.DistributionPoint.Name : "N/A")</td>
                                        <td><a class="label label-default" href="@Url.Action("RecordDamage", "ItemRaw", new { id = item.Id })">
                                            <i class="fa fa-pencil">Edit</i>
                                            </a>
                                        </td>


                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

