@model BarAndRestaurantMate.Models.ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    function blinker() {
        $('.blink_me').fadeOut(500);
        $('.blink_me').fadeIn(500);
    }

    setInterval(blinker, 1000);
</script>

<div class="page-head">
    <h2>BarMate</h2>
    <a style="float:right;" class="btn btn-success hbtn" href="@Url.Action("Index","Home")" id="todaySale">Go Back</a>
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Reports</a></li>
        <li class="active">Store Inventory Reports</li>
    </ol>
</div>
<div class="cl-mcont">
    <div class="row">
        <div class="col-md-12">
            <div class="block-flat">
                <div class="header">
                    <h3>Inventory Reports</h3>
                    @Html.Partial("_DateSelectorWithPointStore")
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table class="table no-border hover">
                            <thead class="no-border">
                                <tr>
                                    <th style="width:25%;"><strong>Item</strong></th>
                                    <th style="width:15%;"><strong>Qty Recieved</strong></th>
                                    <th style="width:15%;"><strong>Qty Ditributed</strong></th>
                                    <th style="width:15%;"><strong>Qty Returned</strong></th>
                                    <th style="width:15%;"><strong>Qty Remaining</strong></th>
                                </tr>
                            </thead>
                            <tbody class="no-border-y">
                                @foreach (var item in Model.MainStoreInventoryList)
                                {
                                        <tr>
                                            <td>@item.ActualStockItem.StockItemName</td>
                                            <td>@item.QuantityRecieved</td>
                                            <td>@(item.QuantityRecieved - (item.QuantityReturned + item.QuantityRemaining)) </td>
                                            <td>@item.QuantityReturned</td>
                                            <td>@item.QuantityRemaining</td>
                                        </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

