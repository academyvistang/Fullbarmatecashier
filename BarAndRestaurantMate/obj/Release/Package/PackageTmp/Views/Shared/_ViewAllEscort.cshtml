 @model BarAndRestaurantMate.Models.HotelMenuModel
<link href="~/css/TilesSmall.css" rel="stylesheet" />

<div class="wrap">

    <!-- Define all of the tiles: -->
     @foreach (var m in Model.Escorts)
     {
        <a href="@Url.Action("ShowEscort", "Guest", new { id = m.Id })">
            <div class="box">
                <div style="width:95%;padding-left:5%;">
                    <input type="text" value="@m.Name" style="width:100%; font-size:10px; text-align:center;" title="@m.Name" />
                </div>
                <div class="boxInner">
                    <img src="~/Products/Dating/@m.PicturePath" />
                    <div class="titleBox">@m.Description</div>
                </div>
            </div>
        </a>
    }

</div>
