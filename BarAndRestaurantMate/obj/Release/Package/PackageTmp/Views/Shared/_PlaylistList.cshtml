@model BarAndRestaurantMate.Models.CinemaModel

<link href="~/css/CoolTable.css" rel="stylesheet" />

@{ int totalRecordCount = 0;}


<div class="twelve columns">

    @if (!Model.PlaylistList.Any())
    {
        @Html.Partial("_EntityUpdated", "You have no playlist entries")
    }
    else
    {
        <div>
            <table class="striped fixedlayout">
                <thead>
                    <tr>
                        <th width="35%"></th>
                        <th style="text-align:center;" width="15%">Name</th>
                        <th style="text-align:center;" width="35%">DJ</th>
                        <th style="text-align:center;" width="15%">No. Of Videos</th>
                    </tr>
                </thead>
                <tbody id="CasesTableBody1">
                        @foreach (var ac in Model.PlaylistList)
                        {
                            <tr id="@ac.Id">
                                <td class="tth2">
                                    <a class="erbEditorOpener buttonDevFirst" href="@Url.Action("CreatePlayList", "Guest", new { id = ac.Id })">Edit Playlist</a> |
                                    <a class="erbEditorOpener buttonDevFirst" href="@Url.Action("PlayPlaylist", "Guest", new { id = ac.Id })">Play Playlist</a>
                                </td>
                                <td style="text-align:center;" class="tth2">@ac.Name</td>
                                <td style="text-align:center;" class="tth2">@ac.Description</td>
                                <td style="text-align:center;" class="tth2">@ac.Movies.Count</td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    }

</div>

