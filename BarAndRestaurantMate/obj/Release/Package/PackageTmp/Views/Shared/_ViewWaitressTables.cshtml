@model BarAndRestaurantMate.Models.HotelMenuModel
<link href="~/css/TilesSmall.css" rel="stylesheet" />

<div class="row">

    <div class="twelve columns">
        <div class="wrap">

            @if (Model.MyTables.Any())
            {
                foreach (var rm in Model.MyTables)
                {
                    <a href="@Url.Action("ViewWaitressTable", "Guest", new { id = rm.TableId })">
                        <div class="box">
                            <div style="width:95%;padding-left:5%;">
                                <input type="text" value="Table @rm.BarTable.TableName" style="width:100%; font-size:10px; text-align:center;" title="Table @rm.BarTable.TableName" />
                            </div>
                            <div class="boxInner" style="margin-top: 5px;">
                                <img src="~/images/icons/table1.jpeg" />
                                <div class="titleBox"> Table @rm.BarTable.TableName</div>
                            </div>
                        </div>
                    </a>
                }
            }
            else
            {
                <div class="row">
                    <div class="twelve columns" style="padding-left:30px;">
                        <p>There are no occupied tables.</p>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


<hr>

<div class="row">
    <div class="twelve columns">

        <div class="twelve columns">
        </div>
        <form method="post" class="signin" action="@Url.Action("OpenTable","Guest")">
            <div class="row">
                <div class="four columns">
                    <label for="four">Table No.*</label>
                    @Html.DropDownListFor(model => model.RealTableId, Model.CanSelectList, new { @name = "room_select", @id = "b-company", @style = "width:310px; height:35px;" })
                    @Html.ValidationMessageFor(model => model.RealTableId)
                </div>

                <div class="four columns">
                    <label for="four">Member*</label>
                    @Html.DropDownListFor(model => model.MemberId, Model.CanSelectListPersons, new { @name = "room_select", @id = "MemberId", @style = "width:310px; height: 35px;" })
                    @Html.ValidationMessageFor(model => model.MemberId)
                </div>

                <div class="four columns">
                    <input class="submit button" id="OpenTableId" type="submit" value="Open New Table" />
                </div>


            </div>
        </form>
    </div>
</div>


@if (Model.CanSelectListExistingTable != null && Model.CanSelectListExistingTable.Any())
{ 
<hr />
<div class="row">
    <div class="twelve columns">

        <div class="twelve columns">
        </div>
        <form method="post" class="signin" action="@Url.Action("OpenTableExisting","Guest")">
            <div class="row">
                <div class="four columns">
                    <label for="four">Table No.*</label>
                    @Html.DropDownListFor(model => model.ExistingTableId, Model.CanSelectListExistingTable, new { @name = "room_select", @id = "b-company", @style = "width:310px; height:35px;" })
                    @Html.ValidationMessageFor(model => model.ExistingTableId)
                </div>

                <div class="four columns">
                    <label for="four">Member*</label>
                    @Html.DropDownListFor(model => model.ExistingTableMemberId, Model.CanSelectListPersonsExistingTable, new { @name = "room_select", @id = "ExistingTableMemberId", @style = "width:310px; height: 35px;" })
                    @Html.ValidationMessageFor(model => model.ExistingTableMemberId)
                </div>

                <div class="four columns">
                    <input class="submit button" type="submit" value="Add To Existing Table" />
                </div>
            </div>
        </form>
    </div>
</div>
}

<hr />

<div class="row">
    <div class="four columns">
        <input type="hidden" id="displayname" />
        <input type="hidden" id="displaynumber" />

        <input id="AnonymousButton" class="submit button" type="submit" value="Create New Member" />
        

        <div style="color: red; font-size:15px;" id="REPLACEGUESTCREDENTIALS"></div>
    </div>

    <div class="eight columns">
        <input id="AnonymousTelephone" style="float:right;" class="submit button" type="submit" value="Send Text Instructions" />
        <div style="color: red; font-size:15px;" id="REPLACEGUESTTELEPHONE"></div>

    </div>
</div>



