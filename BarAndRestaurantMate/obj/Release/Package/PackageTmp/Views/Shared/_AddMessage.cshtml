@model BarAndRestaurantMate.Models.HotelMenuModel




<div class="row">
    <div class="col-md-12">
        <div class="modal-dialog" id="moreLotDPModal" style="width:80%;">

            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Add Message </h4>

                </div>
                @using (Html.BeginForm("CreateGuestMessage", "Guest", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="modal-body">
                        <center><div id="divLoading"></div></center>


                       @Html.HiddenFor(m => m.GuestId)

                        <fieldset>

                            <div class="row">
                                <div class="col-md-12">
                                    <span style="color:Red;">@Html.ValidationSummary(true, "Please correct the errors below.")</span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group has-iconed">
                                        <label>Message</label>
                                        <div class="iconed-input">
                                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control"})
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                    </div>
                    <div class="modal-footer">
                        
                         <button type="submit" class="btn btn-primary">Send</button>
                         <button id="confirm-delete-cancel" data-dismiss="modal" aria-hidden="true" type="button" class="btn btn-danger">Cancel</button>

                    </div>
                }
            </div>

        </div>

    </div>
</div>

