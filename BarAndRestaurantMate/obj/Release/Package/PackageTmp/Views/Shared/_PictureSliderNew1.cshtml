@model BarAndRestaurantMate.Models.HotelMenuModel


<link href="~/js/2/ninja-slider.css" rel="stylesheet" />
<script src="~/js/2/ninja-slider.js"></script>


<div id="ninja-slider">
    <div style="padding:17px 17px 0px 0px;"  class="slider-inner">
        <ul>
            @foreach (var p in Model.Pictures.OrderByDescending(sp => sp.CreatedDate))
            {
                <li>
                    <img class="ns-img" src="~/Products/Gallery/@p.Filename">
                    <div class="caption"></div>
                </li>
            }
        </ul>
        <div class="navsWrapper">
            <div id="ninja-slider-prev"></div>
            <div id="ninja-slider-next"></div>
        </div>
    </div>
</div>

           
